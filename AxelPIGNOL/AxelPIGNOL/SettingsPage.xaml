<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AxelPIGNOL.SettingsPage">

    <ScrollView>
        <VerticalStackLayout Padding="30,0" Spacing="25" HorizontalOptions="Center" VerticalOptions="CenterAndExpand">
            <Label x:Name="questionLabel" 
                   Text="Question" 
                   FontAttributes="Bold"
                   FontSize="22"
                   HorizontalOptions="Center" />

            <Button x:Name="trueButton" Text="Vrai" Clicked="OnAnswerClicked"/>
            <Button x:Name="falseButton" Text="Faux" Clicked="OnAnswerClicked"/>

            <Label x:Name="resultLabel" 
                   Text="Choisissez une réponse"
                   FontSize="18"
                   HorizontalOptions="Center" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
