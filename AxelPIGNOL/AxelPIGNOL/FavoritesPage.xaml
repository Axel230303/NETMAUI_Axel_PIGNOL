<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AxelPIGNOL.FavoritesPage">
    <StackLayout Padding="20">
        <Entry x:Name="nameEntry" Placeholder="Entrer le nom de la bière"/>
        <Entry x:Name="priceEntry" Placeholder="Entrer le prix de la bière"/>
        <Entry x:Name="averageRatingEntry" Placeholder="Entrer la note moyenne de cette bière"/>
        <Entry x:Name="reviewsEntry" Placeholder="Entrer le nombre de Reviews/Revues"/>
        <Entry x:Name="imageUrlEntry" Placeholder="Entrer l'URL de l'image"/>
        <Button Text="Ajouter" Clicked="OnAddBeerClicked"/>
    </StackLayout>
</ContentPage>
